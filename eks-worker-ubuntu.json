{
  "variables": {
    "aws_region": "us-west-2",
    "ami_name": null,
    "ami_groups": "",
    "creator": "{{env `USER`}}",
    "kms_key_id": "",

    "binary_bucket_name": "amazon-eks",
    "binary_bucket_region": "us-west-2",
    "kubernetes_version": null,
    "kubernetes_build_date": "",
    "docker_version": "18.06",
    "cni_version": "v0.6.0",
    "cni_plugin_version": "v0.7.5",

    "source_ami_owners": "099720109477",
    "source_ami_filter_name": "ubuntu/images/hvm-ssd/ubuntu-bionic-18.04-*",
    "arch": null,
    "instance_type": null,
    "ami_description": "EKS Kubernetes Worker AMI with Ubuntu 18.04 image",

    "ssh_interface": "",
    "ssh_username": "ubuntu",
    "vpc_id" : "",
    "subnet_id" : "",
    "aws_access_key" : "",
    "aws_secret_key" : "",
    "aws_token" : ""
  },

  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `aws_region`}}",
      "vpc_id": "{{user `vpc_id`}}",
      "subnet_id": "{{user `subnet_id`}}",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "token": "{{user `aws_token`}}",
      "ami_groups": "{{user `ami_groups`}}",
      "source_ami_filter": {
        "filters": {
          "architecture": "{{user `arch`}}",
          "name": "{{user `source_ami_filter_name`}}",
          "root-device-type": "ebs",
          "state": "available",
          "virtualization-type": "hvm"
        },
        "owners": [ "{{user `source_ami_owners`}}" ],
        "most_recent": true
      },
      "instance_type": "{{user `instance_type`}}",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_type": "gp2",
          "volume_size": 10,
          "delete_on_termination": true
        }
      ],
      "ami_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_type": "gp2",
          "volume_size": 20,
          "delete_on_termination": true
        }
      ],
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_interface": "{{user `ssh_interface`}}",
      "ssh_pty": true,
      "kms_key_id": "{{user `kms_key_id`}}",
      "run_tags": {
          "creator": "{{user `creator`}}"
      },
      "tags": {
          "Name": "{{user `ami_name`}}",
          "created": "{{timestamp}}",
          "docker_version": "{{ user `docker_version`}}",
          "source_ami_id": "{{ user `source_ami_id`}}",
          "kubernetes": "{{ user `kubernetes_version`}}/{{ user `kubernetes_build_date` }}/bin/linux/{{ user `arch` }}",
          "cni_version": "{{ user `cni_version`}}",
          "cni_plugin_version": "{{ user `cni_plugin_version`}}"
      },
      "ami_name": "{{user `ami_name`}}",
      "ami_description": "{{user `ami_description` }}, (k8s: {{ user `version`}}, docker:{{ user `docker_version`}})"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "inline": ["mkdir -p /tmp/worker/"]
    },
    {
      "type": "file",
      "source": "{{template_dir}}/files/",
      "destination": "/tmp/worker/"
    },
    {
      "type": "shell",
      "inline": [
        "/usr/bin/cloud-init status --wait"
      ]
    },
    {
      "type": "shell",
      "script": "{{template_dir}}/install-worker.sh",
      "environment_vars": [
        "AMI_NAME={{user `ami_name`}}",
        "KUBERNETES_VERSION={{user `kubernetes_version`}}",
        "KUBERNETES_BUILD_DATE={{user `kubernetes_build_date`}}",
        "BINARY_BUCKET_NAME={{user `binary_bucket_name`}}",
        "BINARY_BUCKET_REGION={{user `binary_bucket_region`}}",
        "DOCKER_VERSION={{user `docker_version`}}",
        "CNI_VERSION={{user `cni_version`}}",
        "CNI_PLUGIN_VERSION={{user `cni_plugin_version`}}"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "manifest.json",
      "strip_path": true
    }
  ]
}
